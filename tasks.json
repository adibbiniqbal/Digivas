{
	"tasks": [
		{
			"label": "Build",
			"type": "cppbuild",
			"command": "C:\\MinGW\\bin\\gcc.exe",
			"args": [
				"${file}",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}",
				"-lopengl32",
				"-lglu32",
				"-lglut32",
				"-lglaux",
				"-lstdc++",
				"-w"
			]
		},
		{
			"label": "Run",
			"type": "process",
			"command": "${fileDirname}\\${fileBasenameNoExtension}.exe"
		},
		{
			"label": "Build & Run",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"dependsOn": ["Build", "Run"],
			"dependsOrder": "sequence"
		}
	],
	"version": "2.0.0"
}
